{
    "name" : "node-addon-example3",
    "version" : "0.1.3",
    "description" :"Hello world app packaged with node-pre-gyp",
    "main" : "./index.js",
    "author" : "Dane Springmeyer <springmeyer>",
    "repository"   :  {
       "type" : "git",
       "url"  : "git://github.com/springmeyer/node-addon-example.git"
    },
    "binary": {
        "module_name" : "node_addon_example",
        "module_path" : "./lib/binding/{configuration}/{node_abi}-{platform}-{arch}/",
        "remote_path" : "./{module_name}/v{version}/{configuration}/",
        "package_name": "{module_name}-v{version}-{node_abi}-{platform}-{arch}.tar.gz",
        "host"        : "https://node-pre-gyp-tests.s3-us-west-1.amazonaws.com"
    },
    "dependencies"  : {
      "node-pre-gyp": "https://github.com/mapbox/node-pre-gyp/tarball/actually-yeah-bundle"
    },
    "scripts": {
        "install": "node -e \"require('node-pre-gyp').install({fallback_to_build:true})\"",
        "test": "node index.js"
    }
}
